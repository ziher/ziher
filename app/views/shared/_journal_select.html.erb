<div class="row">
  <script type="text/javascript">
   function selectedUnitChanged(unitId) {
     document.location.href = "<%= journals_path %>?unit_id=" + unitId.toString() + "&journal_type_id=<%= @journal.journal_type.id %>&year=<%= session[:current_year] %>";
   }
   function selectedYearChanged(year) {
     document.location.href = "<%= journals_path %>?unit_id=<%= session[:current_unit_id] %>&journal_type_id=<%= @journal.journal_type.id %>&year=" + year;
   }
  </script>

  <!--<div class="input-group">-->
    <div class="col-md-9">
      <select onchange="selectedUnitChanged(this.value)" style="padding: 0; width:100%;">
        <% @user_units.each do |unit| %>
          <option value="<%= unit.id %>" <%= unit.id == session[:current_unit_id] ? "selected='selected'" : "" %>><%= unit.full_name %></option>
        <% end %>
      </select>
    </div>
    <div class="col-md-2 pull-left">
      <select onchange="selectedYearChanged(this.value)" style="padding: 0; width:120%;">
        <% @years.each do |year| %>
          <option value="<%= year %>" <%= year == session[:current_year] ? "selected='selected'" : "" %>><%= year %></option>
        <% end %>
      </select>
    </div>
  <!--</div>-->
</div>